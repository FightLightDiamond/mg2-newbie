<?xml version="1.0" ?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table comment="casio_shop Table" engine="innodb" name="casio_shop" resource="default">
		<column comment="Entity Id" identity="true" name="shop_id" nullable="false" padding="6" unsigned="true" xsi:type="smallint"/>
		<constraint referenceId="PRIMARY" xsi:type="primary">
			<column name="shop_id"/>
		</constraint>
		<column length="255"  name="name" nullable="false" xsi:type="varchar"/>
		<column length="255" name="code" nullable="false" xsi:type="varchar"/>
		<column length="255" name="tel" nullable="true" xsi:type="varchar"/>
		<column length="255" name="business_hours" nullable="true" xsi:type="varchar"/>
		<column length="255" name="holidays" nullable="true" xsi:type="varchar"/>
		<column length="255" name="source_code" nullable="true" xsi:type="varchar"/>
        <constraint xsi:type="unique" referenceId="CASIO_SHOP_NAME_CODE">
            <column name="name"/>
            <column name="code"/>
        </constraint>
	</table>
</schema>
