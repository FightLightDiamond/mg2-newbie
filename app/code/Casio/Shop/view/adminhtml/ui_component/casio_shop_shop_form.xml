<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">casio_shop_shop_form.shop_form_data_source</item>
		</item>
		<item name="label" translate="true" xsi:type="string">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button class="Casio\Shop\Block\Adminhtml\Shop\Edit\BackButton" name="back"/>
			<button class="Casio\Shop\Block\Adminhtml\Shop\Edit\DeleteButton" name="delete"/>
			<button class="Casio\Shop\Block\Adminhtml\Shop\Edit\SaveButton" name="save"/>
			<button class="Casio\Shop\Block\Adminhtml\Shop\Edit\SaveAndContinueButton" name="save_and_continue"/>
		</buttons>
		<namespace>casio_shop_shop_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>casio_shop_shop_form.shop_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="shop_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider class="Casio\Shop\Model\Shop\DataProvider" name="shop_form_data_source">
			<settings>
				<requestFieldName>shop_id</requestFieldName>
				<primaryFieldName>shop_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<field formElement="input" name="shop_name" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Shop</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">shop_name</label>
				<dataScope>shop_name</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="shop_code" sortOrder="20">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Shop</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">shop_code</label>
				<dataScope>shop_code</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="shop_tel" sortOrder="30">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Shop</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">shop_tel</label>
				<dataScope>shop_tel</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="shop_business_hours" sortOrder="40">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Shop</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">shop_business_hours</label>
				<dataScope>shop_business_hours</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="shop_holidays" sortOrder="50">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Shop</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">shop_holidays</label>
				<dataScope>shop_holidays</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="input" name="source_code" sortOrder="60">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Shop</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">source_code</label>
				<dataScope>source_code</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
	</fieldset>
</form>
